<% if current_user && current_user.participant? %>  
  <%= render partial: 'release_document_warning' %>  
  <div class="container text-center mb-5">
    <h4 class="mt-3">Concorso #matimmagini</h4>
    <% if @photos.any? %>  
      <%= edit_and_delete_info %>  
      <%= render @photos, preview: true %>  
    <% else %>
      <div class="alert alert-warning">
        Non hai ancora inviato nessuna foto.
      </div>
    <% end %>
    <%= link_to_new_photo %>  
    <hr/>
    <h4 class="my-3">Concorso MATtalks</h4>
    <% if @videos.any? %>
      <%= render @videos %>
    <% else %>
      <div class="alert alert-warning">
        Non hai ancora inviato nessun video.
      </div>
    <% end %>
    <%= link_to_new_video %>  
  </div>
<% end %>

<%= render partial: 'header' %>  
<%= render partial: 'contest_description' %>  
<%= render partial: 'sponsors' %>  

