<% if current_user %>  
  <% if @photos.any? %>  
    <div class="container text-center">
      <h6>Gentile <%= current_user %>, hai sottoposto le segueti foto:</h6>
      <%= render @photos %>  
    </div>
  <% else %>
    <div class="alert alert-worning">
      Non hai ancora inviato nessuna foto.
    </div>
  <% end %>
  <% if policy(:photo).new?  %>  
    <div class="text-center m-3">
      <%= link_to icon('fas fa-plus-circle', t(:new_photo)), new_photo_path, class: 'btn btn-primary btn-lg' %>  
    </div>
  <% end %>
<% end %>
<%= render partial: 'header' %>  
<%= render partial: 'contest_description' %>  
