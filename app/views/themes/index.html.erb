<div class="container">
  <h1>Lista Categorie</h1>

  <div class="row">
    <% Theme.find_each do |theme| %>   
      <div class="col-md-4 col-sm-2 p-1 text-center card">
        <div class="h-100">
          <%= render theme %>  
        </div>
        <%= link_to "Inviate #{theme.photos.count} foto", theme_photos_path(theme) %>
        <% if policy(theme).edit? %>  
          <%= link_to_edit [:edit, theme] %>  
        <% end %>
      </div>
    <% end %>

    <div class="my-3">
      <%= link_to 'Nuova categoria', new_theme_path, class: 'btn btn-primary' %>  
    </div>
  </div>
</div>
