<div class="container text-center">
  <% if current_user.jury? %>  
    <%= render @photos %>
  <% else %>
    <% if @photos.any? %>  
      <h2>Le foto che hai inviato</h2>
      <%= render @photos %>  
    <% else %>
      <div class="alert alert-worning">
        Non hai ancora inviato nessuna foto.
      </div>
    <% end %>
    <% if policy(:photo).new?  %>  
      <div class="text-center m-3">
        <%= link_to icon('fas fa-plus-circle', t(:new_photo)), new_photo_path, class: 'btn btn-primary btn-lg' %>  
      </div>
    <% end %>
  <% end %>
</div>
