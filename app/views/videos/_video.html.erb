<div class="row my-3">
  <div class="col-md-6 m-0 px-1">
    <div class="embed-responsive embed-responsive-16by9 my-3" style="max-width: 600px; margin-right: auto">
      <iframe class="embed-responsive-item" src="<%= video.embed_url %>" frameborder="0"></iframe>
    </div>
  </div>
  <div class="col-md-6 m-0 px-1">
    <div class="card h-100">
      <div class="class-body h-100 p-1" style="margin-top: 6rem">
        <div class="photo-description">
          <%= video.description %>
        </div>
      </div>
      <div class="card-footer text-left">
        <div>
          <small class="text-muted">
            video inviato il <%= l(video.created_at, format: :day) %>
          </small>
          <% if policy(video).destroy?  %>  
            <span class="float-right mx-1"><%= link_to_delete video_path(video) %></span>
          <% end %>
          <% if current_user && (video.user_id != current_user.id) && policy(:user).show? %>  
            <span class="float-right mx-1"><small><%= video.user.email %></small></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


